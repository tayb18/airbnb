
  <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br/>
    <%= f.label :email %>
    <%= f.text_field :email %><br/>
    <%= f.label :img_url %>
    <%= f.text_field :img_url %><br/>
    <%= f.label :bio %>
    <%= f.text_field :bio %><br/>
    <%= f.label :password %>
    <%= f.password_field :password %><br/>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %><br/>
    <%= f.submit("Submit") %>
  <% end %>